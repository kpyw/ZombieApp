<h1>New Gear</h1>


<%= form_tag(gears_url, method: 'post') do %>


  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :description %><br />
    <%= text_area_tag :description %>
  </div>

  <div>
    <%= label_tag :price %><br />
    <%= number_field_tag :price %>
  </div>

  <div>
    <%= label_tag :image_url %><br />
    <%= text_field_tag :image_url %>
  </div>


  <div>
    <%= submit_tag "Create Gear" %>
  </div>
<% end %>
